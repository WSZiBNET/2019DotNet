@model IEnumerable<panda3.Models.KomputerModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Model)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Producent)</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cena)
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.DataProdukcji)</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KartagraficznaID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProcesorID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlytaglownaID)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataProdukcji)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KartagraficznaID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProcesorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlytaglownaID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KomputerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.KomputerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.KomputerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
