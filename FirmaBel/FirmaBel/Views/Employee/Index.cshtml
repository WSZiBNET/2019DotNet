@model FirmaBel.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employees.First().IDuid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees.First().Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees.First().Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees.First().Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees.First().Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees.First().Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees.First().City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees.First().Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDuid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Model.Positions[item.Position].PositionName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
